{
  "name": "trustless-work-subgraph",
  "version": "0.1.0",
  "description": "Subgraph for indexing Trustless Work escrow events on Stellar using Substreams",
  "author": "Trustless Work Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Trustless-Work/Product"
  },
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "auth": "graph auth --studio",
    "deploy": "graph deploy --studio trustless-work-events",
    "deploy-local": "graph deploy trustless-work-events --node http://localhost:8020 --ipfs http://localhost:5001",
    "create-local": "graph create trustless-work-events --node http://localhost:8020",
    "remove-local": "graph remove trustless-work-events --node http://localhost:8020",
    "test": "graph test",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.69.0",
    "@graphprotocol/graph-ts": "^0.32.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "matchstick-as": "^0.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "stellar",
    "soroban",
    "escrow",
    "subgraph",
    "substreams",
    "trustless-work",
    "blockchain",
    "indexing"
  ]
}